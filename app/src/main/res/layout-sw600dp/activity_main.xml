<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.navigationrail.NavigationRailView
        android:id="@+id/navigation_rail"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/header_navigation_rail"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/navigation_rail_menu" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/main_content"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/navigation_rail">

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/loading_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:elevation="11dp"
            android:indeterminate="true"
            android:visibility="invisible"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:colorBackground"
            app:layout_behavior="it.cammino.risuscito.ui.FABAwareScrollingViewBehavior" />

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:visibility="invisible"
            app:hideOnScroll="true"
            app:layout_scrollFlags="scroll|enterAlways"
            app:menu="@menu/consegnati" />

        <com.leinardi.android.speeddial.SpeedDialOverlayLayout
            android:id="@+id/overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_dim_overlay" />

        <com.leinardi.android.speeddial.SpeedDialView
            android:id="@+id/fab_pager"
            style="@style/Risuscito_SpeedDialMainFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            app:sdExpansionMode="top"
            app:sdOverlayLayout="@id/overlay" />

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:liftOnScrollTargetViewId="@id/content_frame">

            <com.google.android.material.search.SearchBar
                android:id="@+id/risuscito_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/search_name_text" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/material_tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

        </com.google.android.material.appbar.AppBarLayout>

        <!-- Elevation needs to be greater than AppBarLayout's elevation;
       otherwise for some reason when the AppBarLayout's background
       is not transparent, the elevation on this Toolbar doesn't show. -->
        <FrameLayout
            android:id="@+id/contextual_toolbar_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:visibility="gone">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/contextual_toolbar"
                style="?attr/risuscitoToolbarWithCloseButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:titleTextAppearance="@style/TextAppearance.Material3.Risuscito.Toolbar.Contextual.Title" />
        </FrameLayout>

        <include
            android:id="@+id/search_view_layout"
            layout="@layout/search_view_layout" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>